  </div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="region"  value="Africa">
  <label class="form-check-label" for="region">
    Africa
  </label>
  </div>
  <div class="form-check">
  <input class="form-check-input" type="radio" name="region"  value="Australia">
  <label class="form-check-label" for="region">
    Australia
  </label>
  </div>
    

      <div id="city">
      
        <label for="city"><h3>City</h3></label>
        <input type="text" name="city">
        </div>

              <div id="country">
              <h3>Country</h3>
        <label for="country"></label>
        <input type="text" name="country">
        </div>

      <div id="rating">
      <h3>Rating</h3>
        <label for="rating"></label>
        <div class="form-check">
        </div>

  <input class="form-check-input" type="radio" name="rating" value=5>
  <label class="form-check-label" for="rating">
