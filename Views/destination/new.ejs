  <input class="form-check-input" type="radio" name="rating"  value=2>
  <label class="form-check-label" for="rating">
    2
  </label>
  </div>
  <div class="form-check">
  <input class="form-check-input" type="radio" name="rating"  value=1>
  <label class="form-check-label" for="rating">
   1
  </label>
  </div>

        <div id="description">
        <h3>Tell us about your trip</h3>
        <label for="description"></label>
       <textarea type= "text" rows="8" cols="100" name="description">
        </textarea>
       </div>

       <div id="season">
       <h3>When did you go on your trip?</h3>
       <label for="visitSeason"></label>
       </div>
  
<div class="form-check">
  <input class="form-check-input" type="radio" name="visitSeason"  value="Fall">
  <label class="form-check-label" for="visitSeason">
   Fall

  </label>
  </div>

<div class="form-check">
  <input class="form-check-input" type="radio" name="visitSeason"  value="Winter">
  <label class="form-check-label" for="visitSeason">
    Winter
  </label>
  </div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="visitSeason"  value="Spring">
  <label class="form-check-label" for="visitSeason">
   Spring
  </label>
  </div>
  <div class="form-check">
  <input class="form-check-input" type="radio" name="visitSeason"  value="Summer">
  <label class="form-check-label" for="visitSeason">
   Summer
  </label>
  </div>

      
        <input type="submit" value="Submit" class="registerbtn">
        </form>
      </div>

    </i></p><br>
  </div>
  </div>
  


  <!-- The Travel Outro Section -->
  <div class=" travelco paders" style="max-width:800px">
    <h2 class=" Travcenter">Travel Too</h2>
    <p class=" Travcenter"><i>Collect your Memories!</i></p>
  </div>
  


<!-- Footer -->
<footer class="paders">

  <%-include ../partials/_footer.ejs%>

</footer>

</body>
</html>
